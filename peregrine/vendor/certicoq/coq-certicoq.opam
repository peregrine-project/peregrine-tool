depends: [
  "ocaml" {>= "4.13"}
  "conf-clang"
  "stdlib-shims"
  "rocq-core" {>= "9.0" & < "9.1~"}
  "rocq-stdlib" {>= "9.0" & < "9.1~"}
  "coq-compcert" {= "3.16"}
  "rocq-equations" {= "1.3.1+9.0"}
  "rocq-metarocq-erasure-plugin" {= "1.4+9.0"}
  "rocq-metarocq-safechecker-plugin" {= "1.4+9.0"}
  "coq-ext-lib" {>= "0.12"}
  "coq-wasm" {= "2.2.0"}
]

synopsis: "A Verified Compiler for Gallina, Written in Gallina "
url {
  git: "https://github.com/CertiCoq/certicoq.git"
